export async function fetchRiderDeliveries(token) {
  const res = await fetch('/api/bookings?scope=rider', {
    headers: {
      Authorization: `Bearer ${token}`,
    },
  });

  if (!res.ok) {
    const error = await res.json().catch(() => ({}));
    throw new Error(error.error || 'Failed to fetch deliveries');
  }

  return res.json();
}

export async function updateDeliveryStatus({ id, status, token }) {
  const res = await fetch(`/api/bookings/${id}`, {
    method: 'PATCH',
    headers: {
      'Content-Type': 'application/json',
      Authorization: `Bearer ${token}`,
    },
    body: JSON.stringify({ status }),
  });

  if (!res.ok) {
    const error = await res.json().catch(() => ({}));
    throw new Error(error.error || 'Failed to update delivery');
  }

  return res.json();
}
